<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="@dimen/normal_padding"
    android:background="@drawable/light_blue_background"
    android:layout_marginBottom="@dimen/min_padding">

    <ImageView
        android:id="@+id/user_profile_image_view"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:contentDescription="@string/user_avatar"
        android:src="@drawable/avatar_man1_icon"
        android:background="@drawable/white_background_round"
        android:padding="@dimen/min_padding"
        android:layout_weight="0"
        android:layout_marginEnd="@dimen/less_padding"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/notification_header_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/user_profile_image_view"
        app:layout_constraintStart_toEndOf="@id/user_profile_image_view"
        android:text="@string/notification"
        android:textSize="@dimen/normal_text_size"
        android:textStyle="bold"
        android:layout_marginStart="@dimen/normal_padding"/>

    <TextView
        android:id="@+id/notification_date_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/notification_header_text_view"
        app:layout_constraintStart_toStartOf="@id/notification_header_text_view"
        android:text="@string/today_date"
        android:textSize="@dimen/less_text_size"
        android:layout_marginTop="@dimen/min_padding"/>

    <ImageView
        android:id="@+id/unchecked_notification"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:background="@drawable/blue_circle"
        android:contentDescription="@string/is_online_indicator"
        android:layout_weight="0"
        android:layout_marginEnd="@dimen/less_padding"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>