<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/blue_background_smooth_corners"
    android:orientation="horizontal"
    android:gravity="center"
    android:padding="@dimen/less_padding"
    android:layout_marginBottom="@dimen/less_padding">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="1"
        android:textColor="@color/white"
        android:textSize="@dimen/normal_text_size"
        android:layout_weight="1"
        android:layout_marginStart="@dimen/less_padding"/>

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:contentDescription="@string/user_avatar"
        android:src="@drawable/avatar_man1"
        android:background="@drawable/white_background_round"
        android:padding="@dimen/min_padding"
        android:layout_weight="0"
        android:layout_marginEnd="@dimen/less_padding"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="@string/firstname_lastname"
        android:textSize="@dimen/normal_text_size"
        android:textColor="@color/white"
        android:layout_weight="2"/>

    <ImageView
        android:layout_width="15dp"
        android:layout_height="15dp"
        tools:background="@drawable/green_circle"
        android:contentDescription="@string/is_online_indicator"
        android:layout_weight="0"
        android:layout_marginEnd="@dimen/less_padding"/>
</LinearLayout>